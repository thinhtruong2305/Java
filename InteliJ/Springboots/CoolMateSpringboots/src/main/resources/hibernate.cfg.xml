<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTO 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!--Connection MySQL-->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/testCoolMateSpringboots</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">Thinhyeumysql123</property>
        
        <!--Format SQL-->
        <!--Tạo rồi xóa-->
<!--        <property name="hibernate.hbm2ddl.auto">create-drop</property>-->
        <!--Cập nhật-->
        <property name="hibernate.hbm2ddl.auto">update</property>
        <property name="show_sql">true</property>
        <property name="hibernate.format_sql">true</property>
        <property name="hibernate.connection.pool_size">10</property>

        <!--other-->
        <property name="hibernate.connection.characterEncoding">utf-8</property>

        <!--Mapping-->
        <mapping class="com.example.CoolMateSpringboots.DAL.Entities.Brand"/>
    </session-factory>
</hibernate-configuration>